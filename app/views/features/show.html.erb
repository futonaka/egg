<div class="page-header">
  <%= link_to features_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_feature_path(@feature), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show feature</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @feature.title %></dd>

  <dt>Description:</dt>
  <dd><%= @feature.description %></dd>

</dl>
